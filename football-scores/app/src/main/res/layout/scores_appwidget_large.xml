<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widget_background"
    style="@style/ScoresWidget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/widget_vertical_padding"
    android:paddingEnd="@dimen/widget_horizontal_padding"
    android:paddingStart="@dimen/widget_horizontal_padding"
    android:paddingTop="@dimen/widget_vertical_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_crest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="@string/description_home_crest"/>

        <TextView
            android:id="@+id/home_name"
            style="@style/ScoresWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="@string/test_text"
            android:textSize="@dimen/widget_team_names"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score_textview"
            style="@style/ScoresWidget"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_text"
            android:textSize="@dimen/score"/>

        <TextView
            android:id="@+id/data_textview"
            style="@style/ScoresWidget"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/away_crest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/description_away_crest"/>

        <TextView
            android:id="@+id/away_name"
            style="@style/ScoresWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="@string/test_text"
            android:textSize="@dimen/widget_team_names"/>

    </LinearLayout>

</LinearLayout>
